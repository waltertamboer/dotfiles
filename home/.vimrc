" Disable vi-compatibility
set nocompatible

" Disable file type detection
filetype off

" Always display what mode we're editing in
set showmode

" Disable wrapping of lines
set nowrap

" Use smart tabs
set smarttab

" Use 4 spaces for a tab
set tabstop=4

" When hitting backspace, pretend like a tab is removed, even if spaces
set softtabstop=4

" The number of spaces to use for autoindenting
set shiftwidth=4

" Expand tabs by default
set expandtab

" Auto indent lines
set autoindent

" Copy the indenting of the previous line
set copyindent

" Allow the usage of the mouse
set mouse=a

" Show line numbers
set number

" Ignore casing when searching
set ignorecase

" Don't use beeps
set visualbell
set noerrorbells

" Enable enhanced command line completion
set wildmenu

" Show (partial) command in the last line of the screen.
set showcmd

" Enable syntax highlighting
syntax on

