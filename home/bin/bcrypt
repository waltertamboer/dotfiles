#!/usr/bin/php
<?php

if (version_compare(PHP_VERSION, '5.5.0', '<')) {
	echo 'PHP version >=5.5.0 is required. You are using version: ' . PHP_VERSION . PHP_EOL;
	exit(1);
}

if (!isset($_SERVER['argv'][1])) {
	echo 'Usage: bcrypt <value>' . PHP_EOL;
	exit(1);
}

echo password_hash($_SERVER['argv'][1], PASSWORD_BCRYPT) . PHP_EOL;
